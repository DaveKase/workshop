<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextViewerActivity">

    <TextView
        android:id="@+id/viewerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/viewer_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/viewerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/viewerText"
        app:layout_constraintTop_toBottomOf="@+id/viewerText"
        android:hint="@string/viewer_edit_hint"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/viewerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/viewer_button_text"
        app:layout_constraintEnd_toEndOf="@+id/viewerEditText"
        app:layout_constraintStart_toStartOf="@+id/viewerEditText"
        app:layout_constraintTop_toBottomOf="@+id/viewerEditText"
        android:onClick="viewText"/>

    <TextView
        android:id="@+id/viewerInvisibleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/viewerButton"
        app:layout_constraintTop_toBottomOf="@+id/viewerButton"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>