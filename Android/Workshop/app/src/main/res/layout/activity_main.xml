<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/blue_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/blue"
        android:onClick="onClick"
        android:text="@string/blue_text" />

    <Button
        android:id="@+id/green_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/blue_btn"
        android:layout_marginEnd="30dp"
        android:background="@color/green"
        android:onClick="onClick"
        android:text="@string/green_text" />

    <Button
        android:id="@+id/red_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/blue_btn"
        android:layout_alignTop="@+id/yellow_btn"
        android:background="@color/red"
        android:onClick="onClick"
        android:text="@string/red_text" />

    <Button
        android:id="@+id/yellow_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/green_btn"
        android:layout_marginBottom="30dp"
        android:background="@color/yellow"
        android:onClick="onClick"
        android:text="@string/yellow_text" />
</RelativeLayout>